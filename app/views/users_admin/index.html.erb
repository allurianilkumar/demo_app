<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-9" id="padding">
          <div class="row">
            <div class="col-md-10">
              <p class="lead"> Listing users </p>
            </div>
            <div class="col-md-2">
              <%= link_to 'Add User', new_users_admin_path,:class => 'btn btn-primary' %>
            </div>
          </div>
          <table class="table table-striped table-hover">
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Institution</th>
              <th>Role</th>
              <th colspan="3" class="text-center"></th>
            </tr>
                <% if @users.blank? %> 
                  <p> No Users </p>
                <% else %>
                  <% @users.each do |users| %>
                    <tr>
                      <td><%= users.first_name%></td>
                      <td><%= users.last_name%></td>
                      <td><%= users.email%></td>
                      <td><%= users.institution%></td>
                      <td><%= users.role%></td>
                      <td><%= link_to 'show',users_admin_path(users.id)%></td>
                      <td><%= link_to 'edit', edit_users_admin_path(users.id) %></td>
                      <td><%= link_to 'Destroy', users_admin_path(users.id), :method => 'delete',data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                <% end %>
          </table>
          <div  class='col-lg-offset-3'>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

