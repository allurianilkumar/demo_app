<div class="col-md-8 col-xs-5 col-md-offset-0">
  <div class="thumbnail">
    <div class="caption">
      <form class="form-horizontal">
        <fieldset>
          <legend>Gadget Inventory</legend>
            <div class="form-group">
              <%= search_form_for @search do | f | %>
                <div class="col-md-5">
                  <label><%= f.label :title_start, "Search by: Gadget title" %></label>
                    <%= f.text_field :title_start %><br/><br/>
                  <label><%= f.label :analysis_group, "Search by:Analysis Group" %></label>
                    <%= f.text_field :analysis_group_start %></br><br/>
                    <%= f.submit "Search", :class => "btn btn-default" %>
                </div>
              <% end %>
            </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
